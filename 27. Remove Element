class Solution(object):
    def removeElement(self, nums, val):
        """
        :type nums: List[int]
        :type val: int
        :rtype: int
        """
        length = len(nums)
        i = 0
        while i < length:
            if nums[i] == val:
                # shift each element
                for j in range(i, length-1):
                    nums[j] = nums[j+1]

                length = length - 1
            else:
                i += 1
            
                

        return length
        
